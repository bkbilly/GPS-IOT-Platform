# GPS/IoT Platform - Environment Configuration

# ==================== Database ====================
DATABASE_URL=postgresql+asyncpg://gps_user:gps_password@localhost/gps_platform
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# ==================== Network Servers ====================
TCP_HOST=0.0.0.0
UDP_HOST=0.0.0.0

# ==================== API Server ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ==================== Security ====================
SECRET_KEY=dev-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== Alert Engine ====================
OFFLINE_CHECK_INTERVAL_SECONDS=300

# ==================== Geocoding (Optional) ====================
GEOCODING_ENABLED=true
GEOCODING_PROVIDER=nominatim

# ==================== Feature Flags ====================
ENABLE_WEBSOCKETS=true
ENABLE_NOTIFICATIONS=true
ENABLE_COMMAND_QUEUE=true